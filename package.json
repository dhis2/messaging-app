{
  "name": "messaging-app",
  "version": "30.0.4",
  "license": "BSD-3-Clause",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js",
    "build": "npm run localize && webpack -p --config webpack.prod.js",
    "postbuild": "npm run manifest && cp ./package.json ./build/package.json",
    "test": "jest",
    "manifest": "d2-manifest package.json build/manifest.webapp",
    "format": "code-style",
    "extract-pot": "d2-i18n-extract -p app/src/ -o i18n/",
    "localize": "npm run extract-pot && d2-i18n-generate -n messaging-app -p ./i18n/ -o ./app/src/locales/",
    "prestart": "npm run localize && d2-manifest package.json ./public/manifest.webapp"
  },
  "devDependencies": {
    "@dhis2/code-style": "^1.3.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-imports": "^1.5.1",
    "babel-preset-es2015": "6",
    "babel-preset-react": "6",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-2": "6",
    "clean-webpack-plugin": "^0.1.18",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "1.0.0",
    "d2-i18n-extract": "^1.0.5",
    "d2-i18n-generate": "^1.0.15",
    "d2-manifest": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "postcss-loader": "3.0.0",
    "redux-logger": "3.0.6",
    "style-loader": "^0.23.0",
    "url-parse": "^1.4.3",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "@dhis2/d2-ui-app": "^1.0.8",
    "@dhis2/d2-ui-header-bar": "^1.1.1",
    "babel-polyfill": "^6.26.0",
    "d2": "31.0.2",
    "d2-i18n": "^1.0.3",
    "d2-ui": "^29.0.25",
    "d2-utilizr": "^0.2.15",
    "history": "^4.7.2",
    "i18next": "^11.3.2",
    "loglevel": "^1.6.1",
    "material-ui": "^0.20.0",
    "material-ui-chip-input": "^0.19.0",
    "material-ui-icons": "1.0.0-beta.36",
    "moment": "^2.21.0",
    "promise": "8.0.2",
    "raf": "^3.4.0",
    "react": "~16.5.2",
    "react-dom": "~16.5.2",
    "react-linkify": "^0.2.2",
    "react-redux": "5",
    "react-router-dom": "^4.2.2",
    "recompose": "^0.30.0",
    "redux": "3",
    "redux-thunk": "^2.3.0",
    "whatwg-fetch": "3.0.0"
  },
  "manifest.webapp": {
    "name": "Messaging",
    "launch_path": "index.html",
    "appType": "APP",
    "icons": {
      "48": "icon.png"
    },
    "developer": {
      "name": "Henning HÃ¥konsen",
      "company": "DHIS2"
    },
    "description": "App for messaging",
    "default_locale": "en",
    "activities": {
      "dhis": {
        "href": ".."
      }
    }
  },
  "jest": {
    "automock": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/app/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/app/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "moduleNameMapper": {
      "^actions[/](.+)": "<rootDir>/app/src/actions/$1",
      "^api[/](.+)": "<rootDir>/app/src/api/$1",
      "^constants[/](.+)": "<rootDir>/app/src/constants/$1",
      "^components[/](.+)": "<rootDir>/app/src/components/$1",
      "^reducers[/](.+)": "<rootDir>/app/src/reducers/$1",
      "^utils[/](.+)": "<rootDir>/app/src/utils/$1"
    }
  }
}
